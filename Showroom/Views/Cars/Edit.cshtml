@model Showroom.Core.ViewModels.Cars.EditCarModel

@{
    ViewData["Title"] = "Edit Car";
}

<div class="row">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-4">
            <h4>EditCarModel</h4>
            <hr/>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label"></label>
                    <input asp-for="Brand" class="form-control"/>
                    <input asp-for="Id" value="@Model.Id" type="hidden"/>
                    <input asp-for="ShowroomId" value="@Model.ShowroomId" type="hidden"/>
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control"/>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control"/>
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control"/>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <input type="submit" value="Save" class="btn btn-primary"/>
                    <a role="button" class="btn btn-light" asp-action="All" asp-route-showroomId="@Model.ShowroomId">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

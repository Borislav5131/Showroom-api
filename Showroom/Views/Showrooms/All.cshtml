@model IEnumerable<Showroom.Core.ViewModels.Showrooms.ShowroomViewModel>

@{
    ViewData["Title"] = "Showrooms";
}

<div class="text-center">
    <h1>Showrooms</h1>
    <p>
        <a role="button" class="btn btn-info" asp-action="Create">Create New Showroom</a>
    </p>
</div>

<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a type="button" class="btn btn-primary btn-sm" href="@Url.ActionLink("All", "Cars", new {  showroomId=item.Id  })">Cars</a>
                <a type="button" class="btn btn-secondary btn-sm" href="@Url.ActionLink("Edit", "Showrooms", new {  id=item.Id  })">Edit</a>
                <a type="button" class="btn btn-danger btn-sm" href="@Url.ActionLink("Delete", "Showrooms", new {  id=item.Id  })">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

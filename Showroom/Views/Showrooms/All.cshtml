@model IEnumerable<Showroom.Core.ViewModels.Showrooms.ShowroomViewModel>

@{
    ViewData["Title"] = "Showrooms";
}

<h1>Showrooms</h1>
<p>
    <a asp-action="Create">Create New Showroom</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Cars","All", "Cars", new {  showroomId=item.Id  }) |
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
